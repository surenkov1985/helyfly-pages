extends ../layout/main

block variables
	include ../includes/vars/variables
	include ../includes/mixins/social-link

block header
	header#header.header
		.header__content.container
			.header__logo.logo helyfly
			.header__contacts.contacts
				p.contacts__type Телефон:
				a(href="tel:+78001231212").contacts__link
					p  8(800)-123-12-12
		.false__content
			.false__logo helyfly
			button.false__sity.more
				p Москва
			.false__contacts-icon
				a(href="tel:+78001231212").false__link
					<svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><rect width="20" height="20" fill="url(#pattern0)"/><defs><pattern id="pattern0" patternContentUnits="objectBoundingBox" width="1" height="1"><use xlink:href="#image0_0_899" transform="scale(0.05)"/></pattern><image id="image0_0_899" width="20" height="20" xlink:href="data:image/png;base64,"/></defs></svg>
		include ../includes/modules/header

block footer
	footer#foot.foot
		.foot__content.container
			.foot__logo.logo helyfly
			.foot__social
				.foot__social-link.social
					ul.social__list
						for index, value in socialIcon
							+socialItem(value)
				button.foot__lang
					p RU
					| !{arrow}
		.foot__copyrait.copyrait
			.copyrait__content.container
				.copyrait__text
					p Тех. поддержка: 8(800)700-00-00
					p © 2018 HELYFLY. All Rights Reserved.
				.copyrait__payment
					.copyrait__cards
						.master-card
							img(src="assets/img/master-card.png" alt="master-card")
						.visa
							img(src="assets/img/visa.png" alt="visa-icon")
						.pay-pal
							img(src="assets/img/pay-pal.png" alt="paypal-icon")
					button.copyrait__lang
						p RU
						| !{arrow}